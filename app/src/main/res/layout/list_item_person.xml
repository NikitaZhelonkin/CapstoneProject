<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/person_thumbnail"
            android:layout_width="@dimen/list_item_person_image_width"
            android:layout_height="@dimen/list_item_person_image_height"
            android:background="@color/gray_alpha" />

        <TextView
            android:id="@+id/person_name"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/person_thumbnail"
            android:paddingStart="@dimen/content_padding"
            android:paddingLeft="@dimen/content_padding"
            android:paddingEnd="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"
            android:paddingTop="@dimen/content_padding_half"
            tools:text="Title some title"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/person_known_for"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/content_padding"
            android:paddingLeft="@dimen/content_padding"
            android:paddingEnd="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"
            android:paddingTop="@dimen/content_padding_half"
            tools:text="Known for"
            android:textColor="@color/text_color_gray"
            android:maxLines="2"
            android:layout_below="@id/person_name"
            android:layout_toRightOf="@id/person_thumbnail"
            android:textSize="12sp"
            android:ellipsize="end" />


        <TextView
            android:id="@+id/person_description"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/content_padding"
            android:paddingLeft="@dimen/content_padding"
            android:paddingEnd="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"
            android:paddingTop="@dimen/content_padding"
            tools:text="Description description ,description description"
            android:textColor="@color/text_color_gray"
            android:maxLines="4"
            android:layout_below="@id/person_known_for"
            android:layout_toRightOf="@id/person_thumbnail"
            android:textSize="12sp"
            android:ellipsize="end" />
    </RelativeLayout>

</android.support.v7.widget.CardView>